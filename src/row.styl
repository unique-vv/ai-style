[ai-row]
  box-sizing border-box
  display table
  width 100%
[ai-col]
  box-sizing border-box
  display table-cell
  vertical-align middle
[ai-col~='addon']
  width 1px
  white-space nowrap
col(cols)
  for k,v in cols
    [ai-col~=\'{k}\']
      width v*100%
col({'1/2':1/2,'1/3':1/3,'1/4':1/4,'1/5':1/5,'4/5':4/5,'1/8':1/8,'3/8':3/8,'5/8':5/8})
[ai-row~='auto']
  width auto
[ai-row~='top']
  >[ai-col]
    vertical-align top
[ai-row~='middle']
  >[ai-col]
    vertical-align middle
[ai-row~='bottom']
  >[ai-col]
    vertical-align bottom
[ai-row~='sm']
  &>[ai-col]
    padding-left 5px
    padding-right 5px
    &:first-child
      padding-left 0
    &:last-child
      padding-right 0
[ai-row~='md']
  &>[ai-col]
    padding-left 8px
    padding-right 8px
    &:first-child
      padding-left 0
    &:last-child
      padding-right 0
[ai-row~='lg']
  &>[ai-col]
    padding-left 10px
    padding-right 10px
    &:first-child
      padding-left 0
    &:last-child
      padding-right 0
[ai-row~='xl']
  &>[ai-col]
    padding-left 15px
    padding-right 15px
    &:first-child
      padding-left 0
    &:last-child
      padding-right 0
[ai-row~='border']
  [ai-col]
    border solid 1px $grayLight
[ai-row~='collapse']
  border-collapse collapse
  [ai-col]
    >*:not(:first-child):not(:last-child)
      border-left none
      border-radius 0
    &:first-child
      >*
        border-top-right-radius 0
        border-bottom-right-radius 0
    &:last-child
      >*
        border-left none
        border-top-left-radius 0
        border-bottom-left-radius 0