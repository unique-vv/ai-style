[ai-modal]
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  background rgba(0,0,0,.4)
  text-align center
  overflow auto
  font-size 0
  &:before
    content ''
    display inline-block
    height 100%
    width 0
    vertical-align middle
  >*
    font-size $fontSize
    display inline-block
    box-sizing border-box
    width 100%
    vertical-align middle
    
[ai-modal~='top']
  &:before
    vertical-align top
[ai-modal~='bottom']
  &:before
    vertical-align bottom